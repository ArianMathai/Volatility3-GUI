{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["src", "main.ts", "preload.ts"]
}
